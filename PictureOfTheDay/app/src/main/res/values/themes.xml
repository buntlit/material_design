<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/FABRed</item>
        <item name="textInputStyle">@style/TextInputEditTextRounded</item>
    </style>

    <style name="Theme.PictureOfTheDayIndigo" parent="Theme.PictureOfTheDay">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="colorSecondary">@color/indigo_light</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="floatingActionButtonStyle">@style/FABYellow</item>
    </style>

    <style name="Theme.PictureOfTheDayPink" parent="Theme.PictureOfTheDay">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorOnPrimary">@color/green</item>
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="floatingActionButtonStyle">@style/FABGreen</item>
    </style>

    <style name="FABRed" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/ferrari_red</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="FABYellow" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/ferrari_yellow</item>
        <item name="tint">@color/ferrari_metallic</item>
    </style>
    <style name="FABGreen" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/ferrari_green</item>
        <item name="tint">@color/ferrari_cream_white</item>
    </style>

    <style name="TextInputEditTextRounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_edit_corner_dimen</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_edit_corner_dimen</item>
        <item name="cornerFamily">cut</item>
    </style>
</resources>